<mvc:View
   xmlns="sap.m"
   xmlns:control="sap.bi.webi.ui.control"
   controllerName="gs.App"
   xmlns:mvc="sap.ui.core.mvc">

   <control:FormulaEditor
      class="wingTestFormulaEditor"
      id="formulaEditor"
      rows="1"
      growingMaxLines="4"
      formulaChange="onFormulaChange"
      formula="=Ancestor(100) + [Coucou] + if true Then toto else titi"/>


   <control:LOV
      height="500px"
      class="sapUiSizeCompact"
      multi="false"
      hierarchical="true"
      answerValues="{/answerValues}"
      defaultValues="{/defaultValues}"
      values="{/values}"
      searchable="{/searchable}"
      selectionChange="onSelectionChange"
      fetchValues="onFetchValues">
   </control:LOV>


</mvc:View>